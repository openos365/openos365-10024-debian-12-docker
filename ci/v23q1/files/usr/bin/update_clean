#!/usr/bin/env bash

cd $PWD


date
apt update -y
apt upgrade -y
apt autoremove -y
apt clean
apt-get autoremove -y 
apt-get clean 
if [ ! -z $1 ];then
    mkdir -p /etc/buildinfo/$1/
    cd /etc/buildinfo/$1/
    date > /build_date.txt
    apt list --installed > apt.list.installed.txt
    apt list > /apt.list.txt
    df -h > df.txt
fi
rm -rf \
    /tmp/* \
    /var/lib/apt/lists/* \
    /var/tmp/* \
    /var/log/* \
    /root/.cache
date






